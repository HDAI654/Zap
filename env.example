# Zap Platform Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./zap.db

# Security Settings
SECRET_KEY=your-secret-key-here-make-it-long-and-random-at-least-32-characters
SESSION_EXPIRE_MINUTES=60
SESSION_COOKIE_NAME=zap_session

# API Configuration
API_ACTIVE_VERSION=1

# External API Keys
GPT_TOKEN=your-openai-api-token-here
ASSEMBLYAI_API_KEY=your-assemblyai-api-key-here

# File Configuration
TABLES_FILE=tables.json

# Development Settings
DEBUG=false
