# 🔐 Secret key for signing cookies, sessions, etc.
SECRET_KEY=your_secret_key_here

# 🕒 Session expiration time in minutes (e.g., 1 year)
SESSION_EXPIRE_MINUTES=525600

# 🍪 Name of the session cookie
SESSION_COOKIE_NAME=zap_auth_token

# 🌐 API version in use
API_ACTIVE_VERSION=1

# 🧠 OpenAI or GPT provider token (keep this secret in real .env!)
GPT_TOKEN=your_openai_token_here

# 🛢️ Database URL (for SQLite, PostgreSQL, etc.)
DATABASE_URL=sqlite:///./zap.db